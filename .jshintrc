{
  "esnext":       true,     // Support ES2015.
  "quotmark":     "single", // Enforce single quotation marks.
  "strict":       true,     // Require `use strict` pragma  in every file.
  "globalstrict": true,     // Allow global "use strict" (also enables 'strict')
  "white":        true,     // Use strict whitespace and indentation rules.
  "nonbsp":       true,     // Warns about "non-breaking whitespace" characters.
  "browser":      true,     // Recognize some web browser globals like "window", "document"
  "node":         true,     // Recognize Node.js globals.
  "mocha":        true,     // Recognize mocha test framework globals.
  "unused":       true,     // Warn about unused variables.
  "predef"        : [       // Custom globals.
    "App",
    "LocalFileSystem",
    "Meteor",
    "nativePath",
    "cordova"
  ]
}
